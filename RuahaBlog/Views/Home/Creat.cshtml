@model CreatViewModel
@{
    ViewBag.Title = "Creat Post";
}


        <form enctype="multipart/form-data" asp-controller="home" asp-action="Creat" method="post" class="mt-3 row">
            <div class="form-group row">
                <label asp-for="Name" class="col-sm-2 col-form-label">Name</label>
                <div class="col-sm-10">
                    <input asp-for="Name" class="form-control" placeholder="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Email" class="col-sm-2 col-form-label">Email</label>
                <div class="col-sm-10">
                    <input asp-for="Email" class="form-control" placeholder="example@gmail.com" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Title" class="col-sm-2 col-form-label">Headline</label>
                <div class="col-sm-10">
                    <input asp-for="Title" class="form-control" placeholder="Headline" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="WriteUp" class="col-sm-2 col-form-label">Article</label>
                <div class="col-sm-10">
                    <textarea asp-for="WriteUp" class="form-control" placeholder="..."></textarea>
                    <span asp-validation-for="WriteUp" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="category" class="col-sm-2 col-form-label">Category</label>
                <div class="col-sm-10">
                    <select asp-for="category" class="custom-select mr-sm-2"
                            asp-items="Html.GetEnumSelectList<Category>()">
                        <option value="">Please Select</option>
                    </select>
                    <span asp-validation-for="category" class="text-danger"></span>

                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Photo" class="col-sm-2 col-form-label">Photo</label>
                <div class="col-sm-10">
                    <div class="custom-file">
                        <input asp-for="Photo" class="form-control custom-file-input" multiple />
                        <label class="custom-file-label">Choose File...</label>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="custom-checkbox">
                    <label asp-for="Visible">
                        <input asp-for="Visible" class="form-control" />
                        @Html.DisplayNameFor(m => m.Visible)
                    </label>
                </div>
            </div>

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        Create
                    </button>
                </div>
            </div>
        </form>
