<div class="col-sm-8">
    @foreach (BogPost post in Model)
    {
        var photoPath = "~/images/" + (post.PhotoPaths ?? "error/Colorlib.jpg");
        if (post.Visible == true)
        {
<div class="blog-post" style="min-width:18rem;max-height:30.5%;">
    <div class="item-thumbs">
        <img class="card-img-top imageThumbnail" src="@photoPath"
             asp-append-version="true" />
    </div>
    <div class="blog-outer">
        <div class="meta">
            <span>@post.category.ToString()</span>
            <span class="date">@DateTime.Now</span>
